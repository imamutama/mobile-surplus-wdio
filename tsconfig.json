{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/cucumber-framework",
            "expect-webdriverio"
        ]
    },
    "include": [
        "./config/**/*.ts",
        "./features/**/*.ts"
    ]
}